Description:fare calculation*/
#include <stdio.h>

float calculateFare(float distance) {
    float fare;
    fare = distance * 50;   // KSh. 50 per kilometer
    return fare;
}

int main() {
    float distance;
    printf("Enter distance traveled (in km): ");
    scanf("%f", &distance);

    float totalFare = calculateFare(distance);
    printf("Total Fare = KSh. %.2f\n", totalFare);

return 0;
}
