Description:Hotel Management Sysyem 
*/#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    // -------------------- 1D ARRAY: Weekly Revenue Tracker --------------------
    double revenue[7];
    double totalRevenue = 0.0, averageRevenue;
    int i;

    printf("=== Weekly Revenue Tracker ===\n");
    for(i = 0; i < 7; i++) {
        printf("Enter revenue for day %d: ", i + 1);
        scanf("%lf", &revenue[i]);
        totalRevenue += revenue[i];
    }

    averageRevenue = totalRevenue / 7.0;
    printf("\nTotal weekly revenue: %.2f\n", totalRevenue);
    printf("Average daily revenue: %.2f\n", averageRevenue);

    // -------------------- 2D ARRAY: Room Occupancy (One Branch) --------------------
    int occupancy[5][10];
    int floor, room, occupied, vacant;

    srand(time(0)); // For random data
    printf("\n=== Room Occupancy (One Branch) ===\n");

    // Randomly fill the 2D array with 1 (occupied) or 0 (vacant)
    for(floor = 0; floor < 5; floor++) {
        for(room = 0; room < 10; room++) {
            occupancy[floor][room] = rand() % 2; // random 0 or 1
        }
    }

    // Display results
    for(floor = 0; floor < 5; floor++) {
        occupied = vacant = 0;
        for(room = 0; room < 10; room++) {
            if(occupancy[floor][room] == 1)
                occupied++;
            else
                vacant++;
        }
        printf("Floor %d: Occupied = %d, Vacant = %d\n", floor + 1, occupied, vacant);
    }

    // -------------------- 3D ARRAY: Multiple Branches --------------------
    int chain[3][5][10];
    int branch;
    int totalOccupied = 0;

    printf("\n=== Multiple Branches Occupancy ===\n");

    // Fill with random 1 or 0
    for(branch = 0; branch < 3; branch++) {
        for(floor = 0; floor < 5; floor++) {
            for(room = 0; room < 10; room++) {
                chain[branch][floor][room] = rand() % 2;
            }
        }
    }

    // Count total occupied rooms across all branches
    for(branch = 0; branch < 3; branch++) {
        for(floor = 0; floor < 5; floor++) {
            for(room = 0; room < 10; room++) {
                if(chain[branch][floor][room] == 1)
                    totalOccupied++;
            }
        }
    }

    printf("Total number of occupied rooms across all branches: %d\n", totalOccupied);

return 0;
}
