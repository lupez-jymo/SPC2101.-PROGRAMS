Desciption: to calculate the volume of a cylinder
*/
#include<stdio.h>
int main()
{
    float pie,radius,height,volume;
    
    printf("enter pie:");
    scanf("%f",&pie);
    
      printf("\nenter radius:");
    scanf("%f",&radius);
    
      printf("\nenter height:");
    scanf("%f",&height);
    
    volume=pie*radius*radius*height;
    
    printf("volume of the cylinder in cm %.2f",volume);
    
return 0;
}
